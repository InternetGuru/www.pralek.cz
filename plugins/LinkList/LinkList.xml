<?xml version="1.0" encoding="utf-8"?>
<LinkList>
  <var id="template">long</var>
  <item id="long" modifyonly="modifyonly">
    <dl class="clanek">
      <dt><a title="Zobrazit článek: %s" var="link@href short@title" href="%s?usp=image"><img var="og-image@src heading@alt"/></a></dt>
      <dd class="date" fn="inputvar-dateformat" var="ctime">n/a</dd>
      <dd class="kw" var="kw" fn="inputvar-maketags">n/a</dd>
      <dt class="heading"><a title="Zobrazit článek: %s" var="link@href short@title heading" href="%s?usp=heading">n/a</a></dt>
      <dd class="desc" var="desc">n/a</dd>
      <dd class="extra"><ul>
        <li><a title="Zobrazit článek: %s" var="link@href short@title" class="button" href="%s?usp=button">Přečíst</a></li>
<!--         <li><span class="button facebook" title="Sdílet na facebooku"><span class="fa fa-facebook-official">share</span></span></li> -->
        <li>
          <span class="hideable">
            <span class="eventable">share</span>
            <span class="copyable" fn="inputvar-createlink" var="link">n/a</span>
            <span class="fb hideable-nohide"><a var="link@href" href="https://www.facebook.com/sharer/sharer.php?u=https://www.pralek.cz/%s">Sdílet na facebooku</a></span>
            <span class="twitter hideable-nohide"><a var="link@href" href="https://twitter.com/intent/tweet?text=www.pralek.cz/%s">Sdílet na twitteru</a></span>
          </span>
        </li>
      </ul></dd>
    </dl>
  </item>
</LinkList>
